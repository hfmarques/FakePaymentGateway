    <ItemGroup>
      <ProjectReference Include="..\FakePaymentGateway.Adapters\FakePaymentGateway.Adapters.csproj" />
      <ProjectReference Include="..\FakePaymentGateway.Core\FakePaymentGateway.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
